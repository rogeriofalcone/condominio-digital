{% extends 'admin_layout.html.twig' %}
{% set active = 'admin' %}
{% set adminActive = 'categorias' %}

{% block content %}
    <div id="main" role="main" class="container">
        <a href="{{ path('admin_categoria_add') }}" class="btn btn-inverse">{{ 'Add categoria'|trans }}</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th> {{ 'Name'|trans }} </th>
                    <th> {{ 'Operations'|trans }} </th>
                </tr>
            </thead>
            <tbody>
                {% for categoria in categorias %}
                    <tr>
                        <td> {{ categoria.name|e }} </td>
                        <td>
                            <a href="{{ path('admin_categoria_edit', {'categoria': categoria.id}) }}">edit</a>
                            <a href="{{ path('admin_categoria_delete', {'categoria': categoria.id}) }}">delete</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">{{ 'No artists have been created yet.'|trans }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        {% include "pagination.html.twig" %}
    </div>
{% endblock %}
