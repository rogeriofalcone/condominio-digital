{% extends 'admin_layout.html.twig' %}

{% block content %}
        {% set alertTypeAvaillable = [ 'info', 'success', 'warning', 'error'] %}
                {% for alert in alertTypeAvaillable %}
                    {% for message in app.session.getFlashBag.get(alert) %}
                        <div class="alert alert-{{ alert }}" >
                            <button class="close" data-dismiss="alert">Ã—</button>
                            {{ message|trans }}
                        </div>
                    {% endfor %}
        {% endfor %}
            <div class="panel panel-default">
                <div class="panel-heading"><b>Morador</b></div>
                <div class="panel-body">
                    <div class="col-md-5">
                        <div class="table-responsive">
                            <table class="table">
                                <tr>
                                    <td>Nome</td>
                                    <td>Email</td>
                                    <td>Cpf</td>
                                    <td>Enviar Email</td>
                                </tr>
                            {% for morador in aLista %}
                                <tr>
                                    <td><input type="checkbox"></td>
                                    <td>{{morador.name}}</td>
                                    <td>{{morador.email}}</td>
                                    <td>{{morador.cpf}}</td>
                                    <td><a href="/admin/email/enviar/{{morador.idu}}/seguranca"><i class="icon-lock"></i></a></td>
                                    <td><a href="/admin/email/enviar/{{morador.idu}}/resp-nao-publicada"><i class="icon-bell"></i></a></td>
                                    <td><a href="/admin/email/enviar/{{morador.idu}}/resp-publicada"><i class="icon-time"></i></a></td>
                                </tr>
                            {% endfor %}
                            </table>
                        {% include "pagination_reclamacao.html.twig" %}
                        </div>
                    </div>
                </div>
            </div>
{% endblock %}
