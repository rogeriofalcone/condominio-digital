{% extends 'admin_layout_user.html.twig' %}
{% set active = 'homepage' %}

{% block content %}
    <div class="strippes">
        <div class="container">
            <div class="row">
                <div class="span3 offset1">
                  <img src="{{ app.request.basepath }}/img/users/{{ user.username }}.png" class="img-circle" />
                  <a href="{{path('admin_morador_foto')}}">Alterar Foto</a>
                  
                </div>
                <div class="span5">
                  <h1 id="user_name">{{ user.username|e }}</h1>
                  <dl class="dl-horizontal">
                      <dt>{{ 'email:'|e}}</dt>
                      <dd>{{ user.mail|e }}</dd>
                      <dt>{{ 'member for:'|e }}</dt>
                      <dd>{{ memberSince }}</dd>
                  </dl>
                </div>
            </div>
        </div>
    </div>
    <div id="amazing"> {{ 'FOOTER:'|e }} </div>
    
{% endblock %}
